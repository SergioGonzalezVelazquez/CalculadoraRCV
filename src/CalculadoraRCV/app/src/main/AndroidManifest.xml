<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ipo2.es.calculadorarcv">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:largeHeap="true"
        android:hardwareAccelerated="false"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".presentacion.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".presentacion.MainActivity"
            android:label="@string/title_activity_main"
            android:parentActivityName=".presentacion.LoginActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="ipo2.es.calculadorarcv.presentacion.LoginActivity" />
        </activity>
        <activity android:name=".presentacion.InfoActivity" />
        <activity android:name=".presentacion.RegistrarActivity" />
        <activity android:name=".presentacion.RecomendacionesActivity"></activity>
    </application>

</manifest>